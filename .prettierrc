{
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": false,
  "printWidth": 100,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {"parser": "json"}
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 2,
        "useTabs": false,
        "parser": "markdown"
      }
    }
  ]
}
